{
  "compilerOptions": {
    "target": "esnext",
		"module": "esnext",
		"strict": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"noEmit": false,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,

    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
		"typeRoots": [
			"@types",
			"node_modules/@types",
			"node_module/phaser/types"
		],
		"types": [
			"Phaser"
		]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}